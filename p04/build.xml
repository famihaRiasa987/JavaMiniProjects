<fileset dir="product" includes="Media.java"/>
<doctitle><![CDATA[<h1>Mavs Arboreta, Nursery, and Garden Association</h1>]]></doctitle>
<bottom><![CDATA[<i>Copyright &#169; 2024 Famiha Riasa. Licensed as Gnu General Public License 3.0</i>]]></bottom>
<tag name="license.agreement" scope="all" description="Licensed under:"/>
</javadoc>
</target>
<target name="clean" description="Clean output files">
<delete>
<fileset dir=".">
<include name="**/*.class"/>
</fileset>
</delete>
</target>
</project>
